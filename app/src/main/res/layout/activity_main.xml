<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="pt.ipleiria.estg.tesp.psi.projsi.sistematrocas.projetosi_android_1718.MainActivity">


    <TextView
        android:id="@+id/lblPropostas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/homePage_lblPropostas"
        android:textSize="18sp"
        android:paddingBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:fillViewport="true"
        android:paddingBottom="50dp">

        <ListView
            android:id="@+id/lvPropostas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <TextView
        android:id="@+id/lblAnuncios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/homePage_lblSugestoes"
        android:textSize="18sp"
        android:paddingBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.45"
        android:paddingBottom="50dp"
        android:fillViewport="true">

        <ListView
            android:id="@+id/lvAnuncios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>
