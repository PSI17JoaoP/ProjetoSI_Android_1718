<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pt.ipleiria.estg.tesp.psi.projsi.sistematrocas.projetosi_android_1718.MainActivity">

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblPropostas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/homePage_lblPropostas"
            android:textSize="18sp"
            android:paddingBottom="10dp"/>

        <ListView
            android:id="@+id/lvPropostas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/lblAnuncios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/homePage_lblSugestoes"
            android:textSize="18sp"
            android:paddingBottom="10dp"/>

        <ListView
            android:id="@+id/lvAnuncios"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>
</ScrollView>
