<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgOfertaA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgOfertaA"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

    <ImageView
        android:id="@+id/imgPropostaA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgPropostaA"
        android:layout_toEndOf="@+id/imgPropostaA"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/item_btnVer"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtOfertaA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgOfertaA"
        android:layout_alignStart="@+id/imgOfertaA"
        android:layout_below="@+id/imgOfertaA"
        android:textAlignment="center"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/txtPropostaA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgPropostaA"
        android:layout_alignStart="@+id/imgPropostaA"
        android:layout_below="@+id/imgPropostaA"
        android:textAlignment="center"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat" />

</RelativeLayout>