<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgOferta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgOferta"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

    <ImageView
        android:id="@+id/imgProposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btnAceitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgProposta"
        android:layout_toEndOf="@+id/imgProposta"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/item_btnAceitar"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnRecusar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btnAceitar"
        android:layout_alignTop="@+id/btnAceitar"
        android:text="@string/item_btnRecusar"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgOferta"
        android:layout_alignStart="@+id/imgOferta"
        android:layout_below="@+id/imgOferta"
        android:textAlignment="center"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/txtProposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgProposta"
        android:layout_alignStart="@+id/imgProposta"
        android:layout_below="@+id/imgProposta"
        android:textAlignment="center"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>